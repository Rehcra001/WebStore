@page "/orderconfirmation"

<div class="order">
    <h1>Order Confirmation</h1>
    <div class="order-header">
        <table class="content-table">
            <tbody>
                <tr>
                    <td>Name:</td>
                </tr>
                <tr>
                    <td>Address Line 1:</td>
                </tr>
                <tr>
                    <td>Address Line 2:</td>
                </tr>
                <tr>
                    <td>Suburb:</td>
                </tr>
                <tr>
                    <td>City:</td>
                </tr>
                <tr>
                    <td>Postal Code:</td>
                </tr>
                <tr>
                    <td>Country:</td>
                </tr>
            </tbody>
        </table>
        <table class="content-table">
            <tbody>
                <tr>
                    <td>Order#:</td>
                </tr>
                <tr>
                    <td>Order Date:</td>
                </tr>
                <tr>
                    <td>Payment Type:</td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <table class="content-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Line Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CartItemDTO item in CartItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("c2")</td>
                    <td>@CalcLinePrice(item.Quantity, item.Price).ToString("c2")</td>
                </tr>
            }
        </tbody>
    </table>
    <table class="content-table totals">
        <tbody>
            <tr>
                <td>Total excl. VAT:</td>
                <td>@CalcTotalPrice().ToString("c2")</td>
            </tr>
            <tr>
                <td>Vat @VAT_PERCENTAGE%:</td>
                <td>@CalcVAT().ToString("c2")</td>
            </tr>
            <tr>
                <td>Total incl. VAT:</td>
                <td>@CalcTotalWithVAT().ToString("c2")</td>
            </tr>
        </tbody>
    </table>
    </div>