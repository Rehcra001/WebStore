
<div class="cart-grid">
    <div>
        <img src="data:image;base64, @Convert.ToBase64String(CartItem.Picture)" />
    </div>
    <div class="cart-flex">
        <div class="cart-title">
            <label>@CartItem.Name</label>
        </div>
        <div class="cart-price">
            <label>Price: @CartItem.Price.ToString("c2")</label>
            <InputNumber TValue="int" @bind-Value="@CartItem.Quantity" @oninput="@ShowUpdateButton" style="font-size: 1.1rem; border-radius: 5px; padding-left: 5px;" />
        </div>
        <div class="cart-delete">
            <button class="icon" @onclick="() => ItemDeleted(CartItem.CartItemId)"><i class="fas fa-trash"></i></button>
            <button class="@UpdateQtyVisibility" @onclick="() => ItemQuantityUpdated(CartItem.CartItemId)">Update Quantity</button>
        </div>
    </div>
</div>