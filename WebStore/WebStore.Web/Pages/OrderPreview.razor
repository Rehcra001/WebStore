@page "/orderpreview"

<div class="order-preview">
    <h1>Order Preview</h1>
    <table class="content-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Line Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CartItemDTO item in CartItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("c2")</td>
                    <td>@CalcLinePrice(item.Quantity, item.Price).ToString("c2")</td>
                </tr>
            }
        </tbody>
    </table>
    <table class="content-table totals">
        <tbody>
            <tr>
                <td>Total excl. VAT:</td>
                <td>@CalcTotalPrice().ToString("c2")</td>
            </tr>
            <tr>
                <td>Vat @VAT_PERCENTAGE%:</td>
                <td>@CalcVAT().ToString("c2")</td>
            </tr>
            <tr>
                <td>Total incl. VAT:</td>
                <td>@CalcTotalWithVAT().ToString("c2")</td>
            </tr>
        </tbody>
    </table>
    <hr />
    <div>
        <h2>Please select shipping address</h2>
    </div>
    <table class="content-table shipping">
        <thead>
            <tr>
                <th>Address</th>
                <th>Select Ship To</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < AddressLines.Count; i++)
            {
                <tr>
                    <td>@AddressLines[i].AddressLine1</td>
                    @if (i == DefaultShipAddress)
                    {
                        <td><input type="radio" id="@AddressLines[i].AddressId.ToString()" @onchange="() => SelectAddress()" name="address" checked /></td>
                    }
                    else
                    {
                        <td><input type="radio" id="@AddressLines[i].AddressId.ToString()" @onchange="() => SelectAddress()" name="address" /></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <div style="display: @ShowNewAddressButton;">
        <button @onclick="AddNewAddress_click">Add Address</button>
    </div >
    <div style="display: @ShowNewAddressForm;">
        <AddressComponent Count="@SetNewAddressCount()"  ValidationErrors="@ValidationErrors" Address="@NewAddress"/>
        <button @onclick="SaveNewAddress">Save</button>
    </div>
        
</div>

