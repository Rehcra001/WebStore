@using Blazored.LocalStorage
@using WebStore.WEB.Providers
<header>
    <div  id="logo_id">
        <a class="logo" href="/"><img src="favicon.png" alt="logo" />&nbsp;&nbsp; Web Store</a>
    </div>
    
    <nav>
        <ul class="nav_links">
            <li>
                <NavLink class="nav_home" href="/">
                    Home
                </NavLink>
            </li>
        </ul>
    </nav>
    <div>
        <AuthorizeView>
            <Authorized>
                <button @onclick="SignOut">Sign out</button>
                <button @onclick="OpenProfile">Profile</button>
            </Authorized>

            <NotAuthorized>
                <NavLink href="signin"><button>Sign In</button></NavLink>
                <NavLink href="register"><button>Register</button></NavLink>
            </NotAuthorized>
        </AuthorizeView>
              
    </div>
</header>